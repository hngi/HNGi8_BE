<%- include('../includes/external-header')-%>
<link rel="stylesheet" href="../styles/custom-css/intern-signup.css">
<div class="container d-flex flex-column align-items-center">
  <div class="intro row">
    <div class="col px-2">
      <h1>Welcome to the internship.</h1>
      <a href="#" class="btn"></a>
    </div>
    <div class="col px-2 d-none d-md-block">
      <img src="../img/signup-logo.svg" alt="" class="img-fluid">
    </div>
  </div>

  <form action="/api/v1/apply" method="post">
    <% if(messages.error){ %>
      <% messages.error.forEach(function(err){ %> 
        <div class="alert alert-danger">
          <%- err %>
      </div>
      <%})%>
  <% } %>
  <% if(messages.success){ %>
    <div class="alert alert-success">
        <%- messages.success %>
    </div>
  <% } %>

  <p class="px-2">Register here:</p>

    <!-- Name & Email -->
    <div class="row">
      <div class="col-md mb-3 p-0 px-2">
        <label for="name">Full Name</label>
        <div class="input-group">
          <input name="name" type="text" class="form-control w-100" id="fname" placeholder="e.g. John Doe" required>
          <div class="invalid-feedback"></div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md mb-3 p-0 px-2">
        <label for="email">Email</label>
        <div class="input-group">
          <input type="email" class="form-control w-100" id="email" placeholder="e.g. johndoe@example.com" required>
          <div class="invalid-feedback"></div>
        </div>
      </div>
      <div class="col-md mb-3 p-0 px-2">
        <label for="phone">Phone Number</label>
        <input type="phone" class="form-control" id="phone" maxlength="16" placeholder="e.g. 08023414785" required="">
        <div class="invalid-feedback"></div>
      </div>
    </div>

    <!-- Country and State -->
    <div class="row">
      <div class="col-md mb-3 p-0 px-2">
        <label for="country">Country</label>
        <input type="text" class="form-control" id="country" placeholder="Enter Country" required>
        <div class="invalid-feedback"></div>
      </div>
      <div class="col-md mb-3 p-0 px-2">
        <label for="state">State</label>
        <input type="text" class="form-control" id="state" placeholder="Enter State" required>
        <div class="invalid-feedback"></div>
      </div>
    </div>

        <!-- Track and Employment Status -->
        <div class="row">
          <div class="col-md mb-3 p-0 px-2">
            <label for="track">Track</label>
            <div class="input-group">
              <select name="expertise" class="form-control w-100" id="expertise" required>
                <option value="" selected disabled>Select Field</option>
                <option value="frontend">Frontend</option>
                <option value="backend">Backend</option>
                <option value="mobile">Mobile Development</option>
                <option value="design">UI/UX Design</option>
              </select>
              <div class="invalid-feedback"></div>
            </div>
          </div>
          <div class="col-md mb-3 p-0 px-2">
            <label for="employmentStatus">Employment Status</label>
            <select class="form-control" name="employmentStatus" id="employmentStatus">
              <option disabled selected>Select Option</option>
              <option value="employed">Employed</option>
              <option value="unemployed">Unemployed</option>
            </select>
          </div>
        </div>
    
    <!-- Description -->
    <div class="row px-2">
      <label for="description">Tell us about yourself and why you want to work with us?</label>
      <textarea class="form-control" name="reason" id="reason" rows="5" placeholder="Write here..." ></textarea>
    </div>
    <div class="row">
      <button type="submit" class="submit-btn mx-auto">Submit</button>
    </div>
  </form>
</div>

